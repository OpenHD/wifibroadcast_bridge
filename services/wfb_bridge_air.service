[Unit]
Description=Start the wifibroadcast bridge in air mode
BindsTo=air.target

[Service]
Type=simple
EnvironmentFile=/etc/default/wfb_bridge
ExecStartPre=/bin/systemctl stop ground.target
ExecStart=/usr/bin/wifi_config /etc/default/wfb_bridge air
ExecStopPost=/bin/systemctl start ground.target
TimeoutStopSec=5s
Restart=always
RestartSec=5s

[Install]
WantedBy=air.target
