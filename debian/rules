#!/usr/bin/make -f

BUILDDIR = build_dir

# secondly called by launchpad
build:
	# Submodules don't work on debian builds
	cd modules; git clone https://github.com/radiotap/radiotap-library.git
	mkdir -p $(BUILDDIR);
	cd $(BUILDDIR); cmake -DCMAKE_INSTALL_PREFIX=../debian/tmp/usr ..
	make -C $(BUILDDIR)

# thirdly called by launchpad
binary: binary-indep binary-arch

binary-indep:
	# nothing to be done

binary-arch:
	cd $(BUILDDIR); cmake -P cmake_install.cmake
	mkdir -p debian/tmp/DEBIAN
	dpkg-gencontrol -pwifibroadcast-bridge
	dpkg --build debian/tmp ..

# firstly called by launchpad
clean:
	rm -f build
	rm -rf $(BUILDDIR)
	rm -rf debian/tmp/DEBIAN

.PHONY: build binary binary-arch binary-indep clean
